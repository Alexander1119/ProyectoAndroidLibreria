<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Ajustes"
    tools:showIn="@layout/app_bar_ajustes"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes de cuenta"
        android:padding="20dp"
        android:layout_gravity="center"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:                     "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/idnombre"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="nombre"
            android:textSize="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCnom"
            android:text="CAMBIAR"
            android:textSize="10dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido materno:     "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/idapemat"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="apellido materno"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCam"
            android:textSize="10dp"
            android:text="CAMBIAR" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido paterno:      "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/idapepat"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="apellido paterno"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCap"
            android:textSize="10dp"
            android:text="CAMBIAR" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo:                        "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/idcorreo"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:text="correo"
                android:textSize="15dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCcor"
                android:textSize="10dp"
                android:text="CAMBIAR" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña:                "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/idcontraseña"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="contraseña"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCcon"
            android:textSize="10dp"
            android:text="CAMBIAR" />
    </LinearLayout>
</LinearLayout>
